#
#  Launch a fully populated job at $NUMTASK and co-locate daemons,
#  one daemon per node, which unlocks the initial hang of all tasks.
#
#  Update Log:
#        Aug 05 2010 DHA: Created file.
#

RM_TYPE=@RMTP@
NUMNODES=@NNODES@
SIGNUM=18
NOHUP=""
if test "x$RM_TYPE" = "xbgrm" ; then
  NOHUP=nohup
  rm -f nohup.out
fi

NUMTASKS=`expr $NUMNODES \* @SMP@`

export LMON_PREFIX=@LMONPREFIX@
export LMON_LAUNCHMON_ENGINE_PATH=@LMON@
export LMON_MW_MIX_TEST=1
export LMON_MW_HOSTLIST=@LMONMWHL@

$NOHUP fe_launch_middleware@EXE@ `pwd`/simple_MPI@EXE@ $NUMTASKS $NUMNODES pdebug `pwd`/mw_comm_helper@EXE@ `pwd`/be_kicker_mw@EXE@ $SIGNUM 1

if test -f nohup.out; then
  sleep $NUMNODES
  cat nohup.out
fi
