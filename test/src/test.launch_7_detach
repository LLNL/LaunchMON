#
#  Launch a fully populated job at $NUMTASK and co-locate daemons, 
#  one daemon per node, which unlocks the initial hang of all tasks. 
#
#  Update Log:
#        Aug 2 2012 DHA: Created file.
#

export RM_TYPE=RC_slurm
export MPI_JOB_LAUNCHER_PATH=/usr/bin/srun
export LMON_PREFIX=/g/g19/liu50/bin/cab
export LMON_LAUNCHMON_ENGINE_PATH=/g/g19/liu50/bin/cab/bin/launchmon
export LMON_FE_DETACH_TEST=1

NUMNODES=2
NOHUP=""
if test "x$RM_TYPE" = "xRC_bglrm" -o "x$RM_TYPE" = "xRC_bgprm"; then
  NOHUP=nohup
  rm -f nohup.out
fi

NUMTASKS=`expr $NUMNODES \* 32`

$NOHUP fe_launch_smoketest `pwd`/simple_MPI $NUMTASKS $NUMNODES pdebug `pwd`/be_kicker

if test -f nohup.out; then
  sleep $NUMNODES
  cat nohup.out
fi

