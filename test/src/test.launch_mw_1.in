#
#  Launch a fully populated job at $NUMTASK and co-locate daemons,
#  one daemon per node, which unlocks the initial hang of all tasks.
#
#  Update Log:
#        Jun 01 2012 DHA: Copied from 0.8-middleware-support branch and merged
#                         with 1.0-BGQ
#        Oct 21 2011 DHA: Added dynamic RM detection support.
#        Aug 03 2010 DHA: Created file.
#

export RM_TYPE=@TEST_RMTP@
export MPI_JOB_LAUNCHER_PATH=@TJLPATH@
export LMON_PREFIX=@LMONPREFIX@
export LMON_LAUNCHMON_ENGINE_PATH=@LMON@
NUMNODES=@NNODES@
NOHUP=""
if test "x$RM_TYPE" = "xRC_bglrm" -o "x$RM_TYPE" = "xRC_bgprm"; then
  NOHUP=nohup
  rm -f nohup.out
fi


NUMTASKS=`expr $NUMNODES \* 8`

export LMON_MW_HOSTLIST=@LMONMWHL@

$NOHUP fe_launch_middleware `pwd`/simple_MPI $NUMTASKS $NUMNODES pdebug `pwd`/mw_comm_helper `pwd`/be_kicker

if test -f nohup.out; then
  sleep $NUMNODES
  cat nohup.out
fi

